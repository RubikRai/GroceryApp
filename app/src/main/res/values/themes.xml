<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project1GroceryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name = "logo">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/logo_height</item>
        <item name="textFillColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "title_one_white">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_one</item>
        <item name="textFillColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "title_one_black">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_one</item>
        <item name="color">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "title_two_theme">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_two</item>
        <item name="color">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "title_two_white">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_two</item>
        <item name="color">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name = "title_two_black">
        <item name="fontFamily">@font/norwester</item>
        <item name="android:textSize">@dimen/title_two</item>
        <item name="color">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_general">
        <item name="color">@color/orange</item>
        <item name="textFillColor">@color/white</item>
        <stroke name="strokeColor">@color/white</stroke>
    </style>


</resources>